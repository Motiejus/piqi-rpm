Subject: [PATCH] Add doc/Makefile to generate HTML and manpages

---
 doc/Makefile |   22 ++++++++++++++++++++++
 1 file changed, 22 insertions(+)
 create mode 100644 doc/Makefile

diff --git a/doc/Makefile b/doc/Makefile
new file mode 100644
index 0000000..da85e23
--- /dev/null
+++ b/doc/Makefile
@@ -0,0 +1,22 @@
+SRCS=$(wildcard *.md)
+HTML=$(patsubst %.md,%.html,$(SRCS))
+
+.PHONY: all clean man html
+
+all: man html
+
+man: piqi.1
+
+html: $(HTML) CHANGES.html
+
+%.html: %.md
+	pandoc -s $< -o $@
+
+CHANGES.html: ../CHANGES
+	pandoc -s $< -o $@
+
+piqi.1: tools.md
+	pandoc -s -t man $< -o $@
+
+clean:
+	rm -f $(HTML) piqi.1
